

PROCEDURE Test_pala(parameters)
VAR

    ph: STRING ;
    i,n : INTEGER ;


    n := ph.longeur -1 ;


BEGIN
    FOR i FROM 0 TO n STEP step 1 DO
        IF (ph[i] = ph[n]) THEN
        n=n-1 ;
        Else 
        write('le mot est n''est pas palindrome');

        END_IF
        
    END_FOR
    write('le mot est palindroem')
END


